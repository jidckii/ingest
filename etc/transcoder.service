[Unit]
Description=Auto Ingest Daemon (AID) Server
Documentation=https://github.com/jidckii/aid-server
After=network.target

[Service]
User=transcoder
Group=transcoder

Restart=always

ExecStartPre=/opt/aid-server/bin/rm.sh
ExecStart=/opt/aid-server/bin/transcoder.sh

[Install]
WantedBy=multi-user.target
